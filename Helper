class Helper:
    def __init__(self):
        pass
    
    def menu(self, det_opciones, titulo):
        print("*"*5,titulo,"*"*5)
        for det_opcion in det_opciones:
            print(det_opcion)
        print("*"*5,"*"*(len(titulo)),"*"*5)
        opc = input("Elija una det_opcion[1...{}]: ".format(len(det_opciones)))
        return opc
